<style>
  /* stylelint-disable */
  @media (min-width: 768px) {
    #hero--{{ section.id }} .hero__content-block {
      background: rgba(255, 255, 255, {{ section.settings.background_opacity }});
    }
    {%- if section.settings.content_theme == "dark" -%}
    #hero--{{ section.id }}.hero--dark .hero__content-block {
      background: rgba(0, 0, 0, {{ section.settings.background_opacity }});
    }
    {%- endif -%}
  }
  /* stylelint-enable */
</style>

<section id="hero--{{ section.id }}" class="hero hero--{{ section.settings.content_theme }}{% if section.settings.full_height %} hero--full{% endif %} bg-gray-200">
    {%- if section.settings.image != blank -%}
      {% render 'responsive-image' with image: section.settings.image, image_class: 'hero__image' %}
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg hero__image' }}
    {%- endif -%}

    <div class="hero__content {{ section.settings.horizontal_position }} {{ section.settings.vertical_position }}">
      <div class="hero__content-block">
        {%- if section.settings.title != blank -%}
          <h1 class="m-0 text-4xl md:text-5xl">{{ section.settings.title | escape }}</h1>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          {{ section.settings.text }}
        {%- endif -%}
        {%- if section.settings.button_label != blank -%}
          <div class="mt-8"><a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_label }}</a></div>
        {%- endif -%}
      </div>
    </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "full_height",
      "label": "Full height",
      "info": "Adjust to the full height of the browser window. Image cropping occurs from the center. Does not apply to small screens.",
      "default": false
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Hero Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "select",
      "id": "horizontal_position",
      "label": "Horizontal position",
      "default": "hero__content--left",
      "options": [
        {
          "label": "Left",
          "value": "hero__content--left"
        },
        {
          "label": "Center",
          "value": "hero__content--center"
        },
        {
          "label": "Right",
          "value": "hero__content--right"
        }
      ]
    },
    {
      "type": "select",
      "id": "vertical_position",
      "label": "Vertical position",
      "default": "hero__content--top",
      "options": [
        {
          "label": "Top",
          "value": "hero__content--top"
        },
        {
          "label": "Middle",
          "value": "hero__content--middle"
        },
        {
          "label": "Bottom",
          "value": "hero__content--bottom"
        }
      ]
    },
    {
      "type": "select",
      "id": "content_theme",
      "label": "Theme",
      "default": "light",
      "options": [
        {
          "label": "Dark",
          "value": "dark"
        },
        {
          "label": "Light",
          "value": "light"
        }
      ]
    },
    {
      "type": "select",
      "id": "background_opacity",
      "label": "Background Opacity",
      "default": "0.5",
      "options": [
        {
          "label": "90%",
