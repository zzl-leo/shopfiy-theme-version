        },
        {
          "label": "80%",
          "value": "0.8"
        },
        {
          "label": "70%",
          "value": "0.7"
        },
        {
          "label": "60%",
          "value": "0.6"
        },
        {
          "label": "50%",
          "value": "0.5"
        },
        {
          "label": "40%",
          "value": "0.4"
        },
        {
          "label": "30%",
          "value": "0.3"
        },
        {
          "label": "20%",
          "value": "0.2"
        },
        {
          "label": "10%",
          "value": "0.1"
        },
        {
          "label": "0%",
          "value": "0"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Image"
    }
  ]
}
{% endschema %}